@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>


<main class="page login-page">
    <section class="clean-block clean-form dark">
        <div class="container">
            <div class="block-heading">
                <h2 class="text-info">Log In</h2>
                <p>Koristite vaše podatke kako bi se prijavili na aplikaciju. Ukoliko to niste učinili do sada, možete se registrovati.</p>
            </div>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3"><label class="form-label" for="email" asp-for="Input.Email">Email</label><input class="form-control item" type="email" id="email" asp-for="Input.Email"><span asp-validation-for="Input.Email" class="text-danger"></span></div>
                <div class="mb-3"><label class="form-label" for="password" asp-for="Input.Password">Password</label><input class="form-control" type="password" id="password" asp-for="Input.Password"><span asp-validation-for="Input.Password" class="text-danger"></span></div>
                <div class="mb-3">
                    <div class="form-check"><input class="form-check-input" type="checkbox" id="checkbox"><label class="form-check-label" for="checkbox">Remember me</label></div>
                </div><button class="btn btn-primary" type="submit">Log In</button>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </div>
    </section>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
